{
    "tasks": [
        {
            "type": "cppbuild",
            "label": "C/C++: gcc.exe build active file",
            "command": "C:\\MinGW\\bin\\gcc.exe",
            "args": [
                "-fdiagnostics-color=always",
                "-g",
                "${file}",
                "${fileDirname}\\glad.c",
                "${fileDirname}\\window.c",
                "${fileDirname}\\shader.c",
                "${fileDirname}\\camera.c",
                "${fileDirname}\\Mesh.c",
                "${fileDirname}\\stb.c",
                "${fileDirname}\\texture.c",
                "${fileDirname}\\model\\block.c",
                "${fileDirname}\\model\\sprite.c",
                "${fileDirname}\\Terap.c",
                "${fileDirname}\\perlin.c",
                "${fileDirname}\\world.c",
                "${fileDirname}\\player.c",
                "-o",
                "${fileDirname}\\${fileBasenameNoExtension}.exe",
                "-lopengl32",
                "-lglfw3",
                "-lgdi32",
                "-lcglm"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": "build",
            "detail": "Task generated by Debugger."
        },
        {
            "type": "cppbuild",
            "label": "C/C++: cl.exe build active file",
            "command": "cl.exe",
            "args": [
                "/Zi",
                "/EHsc",
                "/nologo",
                "/Fe${fileDirname}\\${fileBasenameNoExtension}.exe",
                "${file}"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$msCompile"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "Task generated by Debugger."
        }
    ],
    "version": "2.0.0"
}